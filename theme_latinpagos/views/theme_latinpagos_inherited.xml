<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heading tags style options -->
	<template id="heading_style_options" inherit_id="website.snippet_options">
		<!-- Headers -->
		<xpath expr="//we-select[@data-variable='header-template']" position="inside">
			<we-button title="Latinpagos Header One" data-name="latinpagos_header_one_opt" data-customize-website-views="theme_latinpagos.theme_latinpagos_header1"
				data-customize-website-variable="'latinpagos-header-1'" data-img="/theme_latinpagos/static/src/img/header_one.png"/>
        </xpath>
		<!-- Footer -->
		<xpath expr="//we-select[@data-variable='footer-template']" position="inside">
			<we-button title="Latinpagos Estate Footer 1"
                data-name="latinpagos_footer_one_opt"
                data-customize-website-views="theme_latinpagos.theme_common_footer1"
                data-customize-website-variable="'latinpagos-footer-1'"
                data-img="/theme_latinpagos/static/src/img/footer_one.png"/>
        </xpath>

		<xpath expr="//div[@data-js='HeaderNavbar']//we-select" position="replace">
                <we-select string="Alignment"
                    data-name="header_alignment_opt"
                    data-variable="hamburger-position"
                    data-reload="/">
                <we-button data-customize-website-views="" data-customize-website-variable="'left'">Left</we-button>
                <we-button data-customize-website-views="website.template_header_default_align_center, website.template_header_hamburger_align_center, website.template_header_slogan_align_center,theme_latinpagos.theme_latinpagos_header1_align_center" data-customize-website-variable="'center'">Center</we-button>
            <we-button data-customize-website-views="website.template_header_default_align_right, website.template_header_hamburger_align_right, website.template_header_slogan_align_right,theme_latinpagos.theme_latinpagos_header1_align_right" data-customize-website-variable="'right'">Right</we-button>
            </we-select>
        </xpath>

		<xpath expr="//div[@data-js='WebsiteAnimate']" position="attributes">
            <attribute name="data-selector">.o_animable,section,section > .container, section .row > div, img, .fa, .btn, .o_animated_text</attribute>
		</xpath>

		<xpath expr="//div[@data-js='OptionsTab']" position="inside">
            <we-row string="H1">
				<we-fontfamilypicker data-variable="h1-font" />
				<we-input data-customize-website-variable="null" data-variable="h1-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H2">
				<we-fontfamilypicker data-variable="h2-font" />
				<we-input data-customize-website-variable="null" data-variable="h2-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H3">
				<we-fontfamilypicker data-variable="h3-font" />
				<we-input data-customize-website-variable="null" data-variable="h3-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H4">
				<we-fontfamilypicker data-variable="h4-font" />
				<we-input data-customize-website-variable="null" data-variable="h4-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H5">
				<we-fontfamilypicker data-variable="h5-font" />
				<we-input data-customize-website-variable="null" data-variable="h5-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H6">
				<we-fontfamilypicker data-variable="h6-font" />
				<we-input data-customize-website-variable="null" data-variable="h6-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
        </xpath>
    </template>

